<div class="banner">
  <h1>Save any kind of movies!</h1>
</div>
<div class="container">
  <h2>My lists</h2>
  <div class="btn btn-primary">
    <%= link_to 'Add a list', new_list_path %>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card card-lists">
        <h3><%= link_to list.name, list_path(list) %></h3>
      </div>
    <% end %>
  </div>
</div>